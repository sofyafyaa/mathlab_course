function [Output_Matrix, Time_Optimised_code] = New_Instruction(Matrix)
% NEW_INSTRUCTION Summary of this function goes here
% Detailed explanation goes here
    
    tic

    auxiliary_matrix1 = (Matrix < -35);
    Output_Matrix = Matrix - 2 .* Matrix .* auxiliary_matrix1;

    %auxiliary_matrix2 = Matrix(5:5:end, 1:end);
    %Output_Matrix = auxiliary_matrix2;
    Output_Matrix(0:5:end, 1:end) = Output_Matrix(0:5:end, 1:end) / 6;

    Time_Optimised_code = toc;

end

